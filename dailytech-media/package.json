{
  "name": "dailytech-media",
  "version": "1.0.0",
  "description": "Daily Tech Media Platform - French-style radio streaming with rating system",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "node server.js",
    "db:init": "PGPASSWORD=radio_pass psql -h localhost -U radio_user -d radio_db -f database/init.sql",
    "test": "jest --testTimeout=10000",
    "test:watch": "jest --watch --testTimeout=10000"
  },
  "keywords": ["radio", "streaming", "hls", "media", "rating", "postgresql"],
  "author": "Thomas Milton Maestas",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "express-session": "^1.18.2",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "@types/jest": "^29.5.8"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "testMatch": ["**/__tests__/**/*.js", "**/?(*.)+(spec|test).js"]
  }
}
